        xmlns:local="clr-namespace:LayoutGridTest"
        mc:Ignorable="d"
        Title="TestComplexLayout_LayoutGrid2" Height="524" Width="1519">
		<p:LayoutGrid Name="bottom" ShowGridLines="True" GridLinesColor="Yellow">
